---
export interface Props {
	id: string;
	title: string;
	class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} class:list={['scroll-mt-24', className ?? 'mt-10']}>
	<h2 class="text-2xl font-semibold tracking-tight">{title}</h2>
	<div class="mt-3">
		<slot />
	</div>
</section>


