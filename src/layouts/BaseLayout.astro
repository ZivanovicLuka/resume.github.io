---
export interface Props {
	title?: string;
	description?: string;
}

const { title = 'Luka Živanović - CV', description = 'Engineering Manager & Full‑Stack Developer' } = Astro.props;
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-dvh bg-zinc-950 text-zinc-100 antialiased selection:bg-zinc-200 selection:text-zinc-900">
		<a href="#content" class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-zinc-100 focus:px-3 focus:py-2 focus:text-zinc-900">Skip to content</a>
		<header id="site-header" class="sticky top-0 z-50 border-b border-zinc-800 bg-zinc-950/80 backdrop-blur supports-[backdrop-filter]:bg-zinc-950/60">
			<div id="site-header-inner" class="mx-auto max-w-5xl px-4 py-5 transition-all duration-300">
				<div class="flex items-center justify-between gap-3">
					<div id="site-identity" class="flex items-start gap-4 transition-all">
						<img
							id="site-avatar"
							src="/luka.jpg"
							alt="Portrait of Luka Živanović"
							class="h-16 w-16 rounded-full object-cover ring-1 ring-zinc-800 transition-all duration-300"
							loading="eager"
							decoding="async"
							width="64"
							height="64"
						/>
						<div class="transition-all">
							<h1 id="site-title" class="text-xl font-semibold tracking-tight transition-all">Luka Živanović</h1>
							<p id="site-subtitle" class="mt-1 text-sm text-zinc-300 transition-all">Engineering Manager & Full‑Stack Developer · Streamflow · ex. Microsoft</p>
						</div>
					</div>
					<button
						id="mobile-menu-button"
						type="button"
						class="lg:hidden inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-md text-zinc-300 hover:text-white hover:bg-zinc-800 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50"
						aria-label="Open menu"
						aria-controls="mobile-menu"
						aria-expanded="false"
						tabindex="0"
					>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</button>
				</div>
				<nav
					id="site-primary-nav"
					aria-label="Primary"
					class="hidden lg:block mt-4 overflow-hidden opacity-100 transition-all duration-300 will-change-transform"
					style="height:auto"
				>
					<ul class="m-0 p-0 flex flex-wrap gap-3 text-sm text-zinc-300">
						<li><a href="#summary" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Summary</a></li>
                        <li><a href="#work" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Work with me</a></li>
						<li><a href="#experience" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Experience</a></li>
						<li><a href="#education" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Education</a></li>
						<li><a href="#awards" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Awards</a></li>
						<li><a href="#skills" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Skills</a></li>
						<li><a href="#interests" class="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50 rounded">Interests</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<!-- Mobile overlay and menu (between header and footer) -->
		<div id="mobile-overlay" class="lg:hidden fixed inset-x-0 top-0 bottom-0 z-40 bg-zinc-950/40 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300"></div>
		<div
			id="mobile-menu"
			class="lg:hidden fixed inset-x-0 top-0 bottom-0 z-50 overflow-hidden opacity-0 pointer-events-none transition-all duration-300 bg-zinc-950/80 backdrop-blur supports-[backdrop-filter]:bg-zinc-950/60"
			style="max-height:0px"
			aria-label="Mobile Primary"
		>
			<div class="h-full overflow-auto">
				<ul class="m-0 p-4 space-y-1">
					<li><a href="#summary" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Summary</a></li>
                    <li><a href="#work" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Work with me</a></li>
					<li><a href="#experience" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Experience</a></li>
					<li><a href="#education" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Education</a></li>
					<li><a href="#awards" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Awards</a></li>
					<li><a href="#skills" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Skills</a></li>
					<li><a href="#interests" class="block rounded-md px-4 py-3 text-base text-zinc-200 hover:bg-zinc-800/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-400/50">Interests</a></li>
				</ul>
			</div>
		</div>
		<main id="content" class="mx-auto max-w-5xl px-4 py-10">
			<div class="grid gap-10 lg:grid-cols-[1fr_16rem]">
				<div>
					<slot />
				</div>
				<aside class="hidden lg:block">
					<nav id="toc" aria-label="On this page" class="sticky">
						<p class="text-xs font-medium uppercase tracking-wider text-zinc-400">On this page</p>
						<ul class="mt-3 space-y-2 text-sm text-zinc-300">
							<li><a href="#summary" class="hover:text-white">Summary</a></li>
                            <li><a href="#work" class="hover:text-white">Work with me</a></li>
							<li><a href="#experience" class="hover:text-white">Experience</a></li>
							<li><a href="#education" class="hover:text-white">Education</a></li>
							<li><a href="#awards" class="hover:text-white">Awards</a></li>
							<li><a href="#skills" class="hover:text-white">Skills</a></li>
							<li><a href="#interests" class="hover:text-white">Interests</a></li>
						</ul>
					</nav>
				</aside>
			</div>
		</main>
		<footer id="site-footer" class="sticky bottom-0 z-40 border-t border-zinc-800 bg-zinc-950/80 backdrop-blur supports-[backdrop-filter]:bg-zinc-950/60">
			<div class="mx-auto max-w-5xl px-4 py-6 text-xs text-zinc-400">
				<p>Belgrade, Serbia · <a class="underline hover:text-zinc-200" href="mailto:lukazivanovic@gmail.com">lukazivanovic@gmail.com</a></p>
			</div>
		</footer>
		<script is:inline>
			(() => {
				const nav = document.getElementById('site-primary-nav');
				const headerInner = document.getElementById('site-header-inner');
				const avatar = document.getElementById('site-avatar');
				const title = document.getElementById('site-title');
				const subtitle = document.getElementById('site-subtitle');
				const toc = document.getElementById('toc');
				const identity = document.getElementById('site-identity');
				const mobileBtn = document.getElementById('mobile-menu-button');
				const mobileMenu = document.getElementById('mobile-menu');
				const mobileOverlay = document.getElementById('mobile-overlay');
				const footerEl = document.getElementById('site-footer');
				if (!nav || !headerInner || !avatar || !title || !subtitle || !identity) return;
				let openNavHeight = 0;
				let isCollapsed = false;
				const COLLAPSE_Y = 260; // collapse after this scroll
				const EXPAND_Y = 140;   // expand when scrolled back above this
				const positionMobileLayers = () => {
					if (!mobileMenu || !mobileOverlay) return;
					const headerH = headerInner.offsetHeight;
					const footerH = footerEl ? footerEl.offsetHeight : 0;
					const available = Math.max(0, window.innerHeight - headerH - footerH);
					mobileMenu.style.top = `${headerH}px`;
					mobileMenu.style.bottom = `${footerH}px`;
					mobileOverlay.style.top = `${headerH}px`;
					mobileOverlay.style.bottom = `${footerH}px`;
					if (mobileBtn && mobileBtn.getAttribute('aria-expanded') === 'true') {
						mobileMenu.style.maxHeight = `${available}px`;
					}
				};
				const measure = () => {
					// measure the natural height of the nav content for smooth height transitions
					const list = nav.querySelector('ul');
					if (!list) return;
					openNavHeight = list.offsetHeight;
					if (openNavHeight > 0 && nav.style.height !== '0px') {
						nav.style.height = `${openNavHeight}px`;
					}
					positionMobileLayers();
				};
				const apply = () => {
					const lgUp = window.matchMedia('(min-width: 1024px)').matches;
					// hysteresis to avoid oscillation when header height changes
					let nextCollapsed = isCollapsed;
					if (!lgUp) {
						nextCollapsed = false;
					} else if (isCollapsed) {
						if (window.scrollY < EXPAND_Y) nextCollapsed = false;
					} else {
						if (window.scrollY > COLLAPSE_Y) nextCollapsed = true;
					}
					if (nextCollapsed) {
						nav.style.height = '0px';
						nav.classList.add('opacity-0', '-translate-y-1', 'pointer-events-none');
						nav.classList.remove('opacity-100', 'translate-y-0');
						nav.classList.add('mt-0');
						nav.classList.remove('mt-4');
						headerInner.classList.add('py-2');
						headerInner.classList.remove('py-5');
						avatar.classList.add('h-10', 'w-10');
						avatar.classList.remove('h-16', 'w-16');
						title.classList.add('text-lg');
						title.classList.remove('text-xl');
						subtitle.classList.add('text-xs');
						subtitle.classList.remove('text-sm');
						identity.classList.add('items-center');
						identity.classList.remove('items-start');
					} else {
						measure();
						nav.style.height = `${openNavHeight}px`;
						nav.classList.remove('opacity-0', '-translate-y-1', 'pointer-events-none');
						nav.classList.add('opacity-100', 'translate-y-0');
						nav.classList.remove('mt-0');
						nav.classList.add('mt-4');
						headerInner.classList.remove('py-2');
						headerInner.classList.add('py-5');
						avatar.classList.remove('h-10', 'w-10');
						avatar.classList.add('h-16', 'w-16');
						title.classList.remove('text-lg');
						title.classList.add('text-xl');
						subtitle.classList.remove('text-xs');
						subtitle.classList.add('text-sm');
						identity.classList.remove('items-center');
						identity.classList.add('items-start');
					}
					// keep right sidebar below header
					if (toc) toc.style.top = `${headerInner.offsetHeight + 12}px`;
					isCollapsed = nextCollapsed;
					positionMobileLayers();
				};
				measure();
				apply();
				window.addEventListener('scroll', () => requestAnimationFrame(apply), { passive: true });
				window.addEventListener('resize', () => {
					measure();
					requestAnimationFrame(apply);
					// close mobile menu when moving to lg+
					const lgUp = window.matchMedia('(min-width: 1024px)').matches;
					if (lgUp && mobileBtn && mobileMenu && mobileOverlay) {
						mobileBtn.setAttribute('aria-expanded', 'false');
						mobileMenu.style.maxHeight = '0px';
						mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
						mobileMenu.classList.add('opacity-0', 'pointer-events-none');
						mobileOverlay.classList.remove('opacity-100', 'pointer-events-auto');
						mobileOverlay.classList.add('opacity-0', 'pointer-events-none');
					}
				}, { passive: true });
				// mobile menu toggle
				if (mobileBtn && mobileMenu && mobileOverlay) {
					const closeMobile = () => {
						mobileBtn.setAttribute('aria-expanded', 'false');
						mobileMenu.style.maxHeight = '0px';
						mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
						mobileMenu.classList.add('opacity-0', 'pointer-events-none');
						mobileOverlay.classList.remove('opacity-100', 'pointer-events-auto');
						mobileOverlay.classList.add('opacity-0', 'pointer-events-none');
					};
					const openMobile = () => {
						// set available height and positions
						const headerH = headerInner.offsetHeight;
						const footerH = footerEl ? footerEl.offsetHeight : 0;
						const available = Math.max(0, window.innerHeight - headerH - footerH);
						mobileMenu.style.top = `${headerH}px`;
						mobileMenu.style.bottom = `${footerH}px`;
						mobileOverlay.style.top = `${headerH}px`;
						mobileOverlay.style.bottom = `${footerH}px`;
						mobileMenu.style.maxHeight = `${available}px`;
						mobileMenu.classList.remove('opacity-0', 'pointer-events-none');
						mobileMenu.classList.add('opacity-100', 'pointer-events-auto');
						mobileOverlay.classList.remove('opacity-0', 'pointer-events-none');
						mobileOverlay.classList.add('opacity-100', 'pointer-events-auto');
						mobileBtn.setAttribute('aria-expanded', 'true');
					};
					const toggleMobile = () => {
						const expanded = mobileBtn.getAttribute('aria-expanded') === 'true';
						if (expanded) closeMobile(); else openMobile();
					};
					mobileBtn.addEventListener('click', toggleMobile);
					// close on link click
					mobileMenu.addEventListener('click', (e) => {
						const el = e.target instanceof Element ? e.target.closest('a') : null;
						if (el) {
							closeMobile();
						}
					});
					// click outside to close
					document.addEventListener('click', (e) => {
						const t = e.target;
						if (!(t instanceof Element)) return;
						if (!mobileMenu.contains(t) && !mobileBtn.contains(t)) {
							if (mobileBtn.getAttribute('aria-expanded') === 'true') {
								closeMobile();
							}
						}
					});
					// overlay click closes
					mobileOverlay.addEventListener('click', toggleMobile);
					// esc to close
					document.addEventListener('keydown', (e) => {
						if (e.key === 'Escape' && mobileBtn.getAttribute('aria-expanded') === 'true') {
							closeMobile();
						}
					});
					// intercept in-page anchor clicks (ensure header-safe offset)
					document.addEventListener('click', (e) => {
						const t = e.target;
						if (!(t instanceof Element)) return;
						const link = t.closest('a[href^="#"]');
						if (!link) return;
						const href = link.getAttribute('href') || '';
						if (href.length <= 1) return;
						const target = document.querySelector(href);
						if (!target) return;
						e.preventDefault();
						closeMobile();
						requestAnimationFrame(() => {
							const headerH = headerInner.offsetHeight;
							const y = target.getBoundingClientRect().top + window.scrollY - headerH - 8;
							window.scrollTo({ top: y, behavior: 'smooth' });
						});
					}, true);
					// adjust when loading with a hash
					if (location.hash) {
						const target = document.querySelector(location.hash);
						if (target) {
							requestAnimationFrame(() => {
								const headerH = headerInner.offsetHeight;
								const y = target.getBoundingClientRect().top + window.scrollY - headerH - 8;
								window.scrollTo({ top: y });
							});
						}
					}
					// and when hash changes (e.g., back/forward)
					window.addEventListener('hashchange', () => {
						const target = document.querySelector(location.hash);
						if (target) {
							requestAnimationFrame(() => {
								const headerH = headerInner.offsetHeight;
								const y = target.getBoundingClientRect().top + window.scrollY - headerH - 8;
								window.scrollTo({ top: y, behavior: 'smooth' });
							});
						}
					});
				}
			})();
		</script>
	</body>
</html>


